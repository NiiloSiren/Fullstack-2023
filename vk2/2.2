const Course = ({course}) => {
  return(
    <div>
      
        <Header name={course.name}/>
        <Content parts={course.parts} />
        <Yht parts={course.parts}/>
    </div>
  )
}

const Header = ({name}) => {
  return(
      <h1>{name}</h1>
  )
}

const Content = ({parts}) => {
  return(
      
      <div>
      {parts.map(part => 
        <Parts id={part.id} name={part.name} exercises={part.exercises} /> 
      )}
      </div>
  
        )
}

const Yht = ({parts}) => {
  var total = 0
  {parts.map(part =>
    total = total + part.exercises
    )
        }
    return(
      <div>
          {"Combined "+total}
      </div>
    )
}


const Parts = ({name,exercises,id}) => {
  return(
    <p>{name} {exercises}</p>
    
  )
}



